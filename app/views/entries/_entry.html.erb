

<li id="<%= entry.id %>">
  <%= link_to gravatar_for(entry.user, size: 50), entry.user %>
  <span class="user"><%= link_to entry.user.name, entry.user %></span>
  <span class="title"><b><%= entry.title %></b></span>
  <span class="body"><%= entry.body %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(entry.created_at) %> ago.
    <% if current_user?(entry.user) %>
    <span class="btn btn-danger btn-xs colorlink">
      <%= link_to "delete", entry, method: :delete,
                                       data: { confirm: "Do you want to delete post?" } %>
                                       </span>
    <% end %>
    <span class="btn btn-success btn-xs colorlink"><%= link_to 'show comments', entry %></span>

  </span>
</li>