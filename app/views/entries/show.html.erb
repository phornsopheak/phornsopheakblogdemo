<% provide(:title, @entry.user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @entry.user %>
        <%= @entry.user.name %>
      </h1>
    </section>
   <section class="entry_form">
        <%= render 'shared/comment_form' %>
   
    
  </aside>
  <div class="col-md-8">
   <span class="title"><h4>Title : <%= @entry.title %></h4></span>
  <span class="body"><h5>Description : <%= @entry.body %></h5></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(@entry.created_at) %> ago.
    <% if @entry.comments.any? %>
      Comments (<%= @entry.comments.count %>)
      <ol class="entries">
        <%= render @comments %>
      </ol>
      <%= will_paginate @comments %>
      <% else %>
      <div class="nocomment">No comment</div>
    <% end %>
  </div>
</div>